<div class="flex flex-col">
  <h1 class="border border-gray-300 p-1 mb-2 text-center">Articles</h1>

  <ul>
    <% @articles.each do |article| %>
      <li class="mb-1">
        <%= link_to article.title, article %>
      </li>
    <% end %>
  </ul>

  <div class="border border-slate-300 p-1 w-[150px] text-center hover:bg-slate-300">
    <%= link_to "New Article", new_article_path %>
  </div>
</div>